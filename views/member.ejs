<% layout('layouts/boilerplate')%>

   <%- include('./partials/sandbox')%>

      <main class="container py-5">

         <h1>Participant</h1>
         <p class="mb-0 fs-3 lead d-flex align-items-center">
            <%= member.name %>
               <%= member.surname %>
         </p>

         <%- include('./partials/space')%>

            <h4>Target's data</h4>
            <ul class="list-group list-group-flush">
               <li class="bg-none list-group-item mb-0 fs-4 lead d-flex justify-content-between align-items-center">
                  <span class="fw-bolder">
                     Name :
                  </span>
                  <span>
                     <%= member.target.name %>
                        <%= member.target.surname %>
                  </span>
               </li>
               <li class="bg-none list-group-item mb-0 fs-4 lead d-flex justify-content-between align-items-center">
                  <span class="fw-bolder">
                     Gender :
                  </span>
                  <span class="text-capitalize">
                     <%= member.target.gender %>
                  </span>
               </li>
               <li class="bg-none list-group-item mb-0 fs-4 lead d-flex justify-content-between align-items-center">
                  <span class="fw-bolder">
                     Height :
                  </span>
                  <span>
                     <%= member.target.height %>
                  </span>
               </li>
               <li class="bg-none list-group-item mb-0 fs-4 lead d-flex justify-content-between align-items-center">
                  <span class="fw-bolder">
                     Weight :
                  </span>
                  <span>
                     <%= member.target.weight %>
                  </span>
               </li>
               <li class="bg-none list-group-item mb-0 fs-4 lead d-flex justify-content-between align-items-center">
                  <span class="fw-bolder">
                     Intentions :
                  </span>
                  <span>
                     Unknown
                  </span>
               </li>
               <li class="bg-none list-group-item mb-0 fs-4 lead d-flex justify-content-between align-items-center">
                  <a class="btn btn-danger text-uppercase d-flex flex-grow-1 justify-content-center align-items-center"
                     href="/">
                     <span>
                        Confirm the target's identity
                     </span>
                     <div class="spinner-grow spinner text-light ms-3" role="status">
                        <span class="visually-hidden">Loading...</span>
                     </div>
                  </a>
               </li>

            </ul>



      </main>